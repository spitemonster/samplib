{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "strict": true,
        "isolatedModules": true,
        "noImplicitThis": true,
        "verbatimModuleSyntax": true,
        "noEmit": false
    },
	"exclude": [
		"node_modules",
        "**/*.spec.ts",
		"webpack.*.js",
		"dist"
	]
}